<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wangzy.qiemsgtool.WelcomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewWaring"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:gravity="center"
            android:text="@string/welcome_warning"
            android:textSize="@dimen/text_size_title"
            android:textColor="@android:color/holo_red_dark" />


        <TextView
            android:id="@+id/textViewWarnContent"
            android:layout_width="match_parent"
            android:text="@string/welcome_warning_content"
            android:textSize="@dimen/text_size_title"
            android:gravity="center_vertical|left"
            android:padding="@dimen/margin_mid"
            android:layout_height="match_parent" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">





        <CheckBox
            android:id="@+id/checkTextAgreeContent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="false"
            android:textSize="@dimen/text_size_title"
            android:gravity="center"
            android:text="@string/welcome_agree" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <Button
            android:id="@+id/buttonGo"
            android:enabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            android:text="@string/welcome_go" />

    </LinearLayout>


</LinearLayout>
